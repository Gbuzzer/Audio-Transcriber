{
  "name": "audio-transcriber",
  "version": "1.0.0",
  "description": "Browser-based audio transcription tool using OpenAI Whisper API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node scripts/version-update.js",
    "version-bump:patch": "node -e \"const fs=require('fs');const v=JSON.parse(fs.readFileSync('./version.json'));v.patch++;v.build=1;fs.writeFileSync('./version.json',JSON.stringify(v,null,2));\"",
    "version-bump:minor": "node -e \"const fs=require('fs');const v=JSON.parse(fs.readFileSync('./version.json'));v.minor++;v.patch=0;v.build=1;fs.writeFileSync('./version.json',JSON.stringify(v,null,2));\"",
    "version-bump:major": "node -e \"const fs=require('fs');const v=JSON.parse(fs.readFileSync('./version.json'));v.major++;v.minor=0;v.patch=0;v.build=1;fs.writeFileSync('./version.json',JSON.stringify(v,null,2));\""
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}